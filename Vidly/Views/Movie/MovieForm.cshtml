@model Vidly.ViewModel.MovieFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>
@using (Html.BeginForm("Save","Movie"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m=>m.Movie.Name, new { @class = "form-control" })   
    </div>
    <br/>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate,"{0:d MM yyyy}", new { @class = "form-control" })
    </div>
    <br/>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreId)
        @Html.DropDownListFor(m => m.Movie.GenreId,new SelectList(Model.Genres,"Id","Name") ,"Select the Genre", new { @class = "form-control" })
    </div>
    <br/>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.NumberInStock)
        @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control" })
    </div>
    <br/>
    @Html.HiddenFor(m=>m.Movie.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

